<header class="site-header">
  <div class="container row between center">
    <a class="brand" href="{{ '/index.html#home' | url }}">Tovian</a>
    <nav class="nav row">
      <a href="{{ '/index.html#dictionary' | url }}">Dictionary</a>
      {% set guideIcons = { 'overview':'📘', 'phonology':'🔤', 'nouns':'📦', 'pronouns':'🗣️', 'verbs':'⚙️', 'mood-voice':'🎛️', 'questions':'❓', 'adjectives':'🏷️', 'syntax':'🧭', 'introductions':'👋', 'memory-dreams':'💭', 'numbers':'🔢', 'calendar':'📅', 'examples':'🧪' } %}
      {% set slug = (page.url or '') | replace('/guide/','') | replace('.html','') %}
      {% set guideIcon = '' %}
      {% if page.url and (page.url | replace('/guide/','') != page.url) and slug != 'index' %}
        {% set guideIcon = guideIcons[slug] %}
      {% endif %}
      <a href="{{ '/guide/index.html' | url }}">Guide{% if guideIcon %} <span aria-hidden="true">{{ guideIcon }}</span>{% endif %}</a>
      <a href="{{ '/index.html#ask' | url }}">Ask</a>
      <a href="{{ '/gloss/index.html' | url }}">Translator</a>
      <a href="{{ '/guide/examples.html' | url }}">Examples</a>
      <a href="{{ '/index.html#about' | url }}">About</a>
    </nav>
    <div class="row gap" style="flex:1; justify-content:flex-end;">
      <input id="quickSearch" class="input" style="max-width:340px" placeholder="Quick search…" />
      <button id="themeToggle" class="btn ghost toggle" aria-label="Toggle theme" aria-pressed="false">Theme</button>
    </div>
  </div>
  <div class="container" style="padding-bottom:8px">
    <div id="quickResults" class="list"></div>
  </div>
</header>
